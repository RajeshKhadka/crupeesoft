{% extends "base.twig" %}

{% block content %}
	 <!-- Banner Section -->
        <section class="page-banner">
            <div class="image-layer" style="background-image:url({{post.thumbnail.src}})"></div>
            <div class="banner-inner">
                <div class="auto-container">
                    <div class="inner-container clearfix">
                        <h1>{{post.post_title}}</h1>
                        <div class="page-nav">
                            <ul class="bread-crumb clearfix">
                                <li><a href="{{site.link}}">Home</a></li>
                                <li class="active">{{post.post_title}}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--End Banner Section -->

        <div class="sidebar-page-container">
            <div class="auto-container">
                <div class="row clearfix">

                    <!--Content Side-->
                    <div class="content-side col-lg-8 col-md-12 col-sm-12">
                        <div class="blog-details">
                            <!--News Block-->
                            <div class="post-details">
                                <div class="inner-box">
                                    <div class="image-box">
                                       <img src="{{post.thumbnail.src}}" alt="{{post.post_title}}'s Image">
                                    </div>
                                    <div class="lower-box">
                                        <div class="post-meta">
                                            <ul class="clearfix">
                                                <li><span class="far fa-clock"></span> {{ post.date is empty ? "" : post.date|date("m/d/Y") }}</li>
                                                <li><span class="far fa-user-circle"></span> {{post.author.name}}</li>
                                                {# <li><span class="far fa-comments"></span> 2 Comments</li> #}
                                            </ul>
                                        </div>
                                        <h4>{{post.post_title}}</h4>
                                        <div class="text">
                                            {{post.post_content}}
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="post-control-two">
                                <div class="row clearfix">
                                    {% if post.prev %}
                                    <div class="control-col col-md-6 col-sm-12">
                                        <div class="control-inner">
                                            <h4><a href="{{post.prev.link}}">{{post.prev.title}}</a></h4>
                                            <a href="{{post.prev.link}}" class="over-link"></a>
                                        </div>
                                    </div>
                                    {% endif %}
                                     {% if post.next %}
                                    <div class="control-col col-md-6 col-sm-12">
                                        <div class="control-inner">
                                            <h4><a href="{{post.next.link}}">{{post.next.title}}</a></h4>
                                            <a href="{{post.next.link}}" class="over-link"></a>
                                        </div>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
